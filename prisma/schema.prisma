// Define database connection via the `PRISMA_ENERGY_MANAGER_DB_POSTGRES_URL` env var
datasource db {
  provider = "postgresql"
  url      = env("PRISMA_ENERGY_MANAGER_DB_POSTGRES_URL")
}

// Define custom output path for generated Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Example data model
model User {
  id        Int      @id @default(autoincrement())
  auth0Id   String   @unique
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  panels Panel[]
}

model Panel {
  id        Int      @id @default(autoincrement())
  espChipId String   @unique
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations 
  user    User     @relation(fields: [userId], references: [id])
  circuits Circuit[]
}

model Sensor {
  id           Int      @id @default(autoincrement())
  code         String
  sensorTypeId Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations 
  sensorXCircuit SensorXCircuit[]
  sensorType     SensorType       @relation(fields: [sensorTypeId], references: [id])
}

model SensorType {
  id        Int      @id @default(autoincrement())
  code      String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sensor Sensor[]
}

model SensorXCircuit {
  id        Int @id @default(autoincrement())
  sensorId  Int
  circuitId Int

  sensor  Sensor  @relation(fields: [sensorId], references: [id])
  circuit Circuit @relation(fields: [circuitId], references: [id])
}

model Circuit {
  id             Int      @id @default(autoincrement())
  name           String
  doublePolarity Boolean
  panelId        Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  panel          Panel            @relation(fields: [panelId], references: [id])
  sensorXCircuit SensorXCircuit[]
  power          Power[]
  intensity      Intensity[]
  voltage        Voltage[]
}

model Power {
  id        Int      @id @default(autoincrement())
  circuitId Int
  value     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  circuit Circuit @relation(fields: [circuitId], references: [id])
}

model Intensity {
  id        Int      @id @default(autoincrement())
  circuitId Int
  value     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  circuit Circuit @relation(fields: [circuitId], references: [id])
}

model Voltage {
  id        Int      @id @default(autoincrement())
  circuitId Int
  value     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  circuit Circuit @relation(fields: [circuitId], references: [id])
}
